<div class="flex flex-col items-center justify-center h-screen w-screen">
  <div class="flex flex-col w-full max-w-lg p-4 gap-4">
    <h1 class="font-semibold text-2xl">Sign in</h1>
    <p class="text-zinc-500 dark:text-zinc-400 text-sm">
      Don't have an account? <%= link("Sign up",
        to: Routes.registration_path(@conn, :new),
        class: "dark:hover:text-white hover:text-black underline"
      ) %>
    </p>
    <%= form_for @conn, Routes.session_path(@conn, :create), [class: "flex flex-col w-full gap-4"], fn f -> %>
      <div>
        <%= label(f, :email) %>
        <%= text_input(f, :email,
          placeholder: "Enter your email address",
          autofocus: "",
          class:
            "w-full focus:ring-0 focus:border-gray-300 border-gray-300 dark:border-zinc-700 bg-gray-100 dark:bg-black rounded-md p-2 mt-2"
        ) %>
      </div>

      <div>
        <%= label(f, :password) %>
        <%= password_input(f, :password,
          placeholder: "Enter your password",
          class:
            "w-full focus:ring-0 focus:border-gray-300 border-gray-300 dark:border-zinc-700 bg-gray-100 dark:bg-black rounded-md p-2 mt-2"
        ) %>
      </div>

      <%= submit("Sign in",
        class:
          "w-full bg-black text-zinc-300 p-2 rounded-xl font-semibold mt-2 border border-zinc-700"
      ) %>
    <% end %>
  </div>
</div>
