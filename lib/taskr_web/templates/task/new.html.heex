<h1>Add New Task</h1>

<%= form_for @changeset, Routes.task_path(@conn, :create), fn f -> %>
    <%= if @changeset.action do %>
        <div>
            <p>Something went wrong!</p>
        </div>
    <% end %>

    <%= label f, :description %>
    <%= text_input f, :description %>

    <div>
        <%= submit "Add Task"%>
        <%= link  "Cancel", to: Routes.task_path(@conn, :index) %>
    </div>
<% end %>