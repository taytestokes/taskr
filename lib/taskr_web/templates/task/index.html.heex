<h1>Tasks</h1>

<h2>In Progress</h2>
<%= for task <- @tasks do %>
    <p>
    <%= task.description %> | 
    <%= link "Delete", to: Routes.task_path(@conn, :delete, task.id), method: :delete, data: [confirm: "Are you sure?"] %> |
    <%= link "Edit", to: Routes.task_path(@conn, :edit, task.id) %>
    </p>
<% end %>

<h2>Completed</h2>

<%= link "Add Task", to: Routes.task_path(@conn, :new) %>